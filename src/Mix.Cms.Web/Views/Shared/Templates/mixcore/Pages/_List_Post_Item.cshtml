@model Mix.Cms.Lib.ViewModels.MixArticles.ReadListItemViewModel
@{
    int index = (int)this.ViewData["Index"];
    var i = index %2;
    string thumb = Model.ThumbnailUrl;
    var rowIndex = (index/2)%2;
}

@if(rowIndex ==0)
{
    
    @if(i == 0)
    {
    <div class="col-md-6 px-0">
    
        <div class="card card-fashion card-background" style="background-image: url('@thumb')">
            <div class="card-body">
                <div class="card-title text-left">
                    <h2>
                        <a href="@Model.DetailsUrl">
                           @Model.Title
                       </a>
                    </h2>
                </div>
