                        </span>
                    </div>
                    <div class="stats-link pull-right">
                        @foreach (var tag in Model.ListTag)
                        {
                            <a href="/@ViewBag.culture/tag/@(tag["text"])" class="footer-link">@(tag["text"])</a>
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
