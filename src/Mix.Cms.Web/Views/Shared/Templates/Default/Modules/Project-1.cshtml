<div class="projects-1 pb-0">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto text-center">
                <h2 class="title">@Model.Title</h2>
                <p class="description">@Html.Raw(Model.Description)</p>
            </div>
        </div>
        <div class="row">
            @foreach(var nav in Model.Articles.Items)
            {
                var article = nav.Article;
                <div class="col-md-6 px-0">
                    <div class="card card-background card-background-product card-no-shadow" style="background-image: url('@article.ThumbnailUrl')">
                        <div class="card-body">
                            <h3 class="card-title">
                                @article.Title
                            </h3>
                            <p class="card-description" style="color:white">
                                @Html.Raw(article.Excerpt)
                            </p>
                            <a href="@article.DetailsUrl" class="btn btn-danger btn-round">
                                <i class="now-ui-icons ui-1_send"></i> View Book
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
