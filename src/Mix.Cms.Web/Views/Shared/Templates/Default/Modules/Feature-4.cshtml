<!--     *********     FEATURES 4      *********      -->

    <div class="features-4">
        <div class="container">
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto text-center">
                    <h2 class="title">@Model.Title</h2>
                    <h4 class="description">@Html.Raw(Model.Description)</h4>
                </div>
            </div>

            <div class="row">
                @foreach (var item in Model.Data.Items)
                {
                    <div class="col-md-4">
                        <div class="card card-background card-raised" data-background-color style="background-image: url('@item.Property("image")')">
                            <div class="info">
                                <div class="icon icon-white">
                                    <i class="@item.Property("icon")"></i>
                                </div>
                                <div class="description">
                                    <h4 class="info-title">@item.Property("title")</h4>
                                   <p>@item.Property("description")</p>
                                    <a href="@item.Property("url")" class="ml-3">Read More &raquo;</a>
                                </div>
                            </div>
                        </div>
                    </div>
                
                }
            </div>
        </div>

    </div>

    <!--     *********    END FEATURES 4      *********      -->
