    <!-- <link href="~/css/now-ui.min.css" rel="stylesheet" />     -->
    <!-- <link href="~/css/app-vendor.min.css" rel="stylesheet" />   -->
    <link href="~/css/app-vendor.min.css" rel="stylesheet" />  
    <link href="~/css/shared.min.css" rel="stylesheet" />  
    <link href="~/css/tabler.min.css" rel="stylesheet" />  
    <link href="~/css/app-security.min.css" rel="stylesheet" />  

</head>

<body class="login-page app-security" ng-app="MixPortal" style="background-image: url('/assets/img/bgs/init.jpg');background-size: cover;">
     <!-- style="background-image: url('/assets/img/bgs/work-space.jpg');" -->
    <mix-loader ng-show="isBusy"></mix-loader>
    <div class="page">
      <div class="page-single">
        <div class="container">
          <div class="row">
            <div class="col col-login mx-auto">
                @RenderBody()
            </div>
          </div>
        </div>
      </div>
    </div>


    <environment names="Development">
    </environment>
    <script src="~/js/framework.min.js"></script>
    <script src="~/js/app-security.min.js"></script>
    <script src="~/js/app-shared.min.js"></script>   
    
    @RenderSection("Scripts", required: false)

</body>
</html>