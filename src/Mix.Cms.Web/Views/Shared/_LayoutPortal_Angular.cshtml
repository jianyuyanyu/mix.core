@using Microsoft.AspNetCore.Mvc.Localization
@inject UserManager<ApplicationUser> UserManager
<!doctype html>
<html lang="en">

<head>
    <base href="/portal">
    <title>@ViewData["Title"] - Angular mixcore</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=1920">
    <meta data-react-helmet="true" name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover, user-scalable=no">
    <link rel="icon" type="image/png" sizes="16x16" href="@(MixService.GetConfig<string>("Favicon", ViewBag.culture) ?? "/favicon-16x16.png")">        
    
    
    <link rel="stylesheet" href="~/css/app-vendor.min.css" />
    <link rel="stylesheet" href="~/css/shared.min.css" />
    <link rel="stylesheet" href="~/css/portal.min.css" />
      
    <!-- <link rel="stylesheet" href="~/css/portal/mixcore.css" /> -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

    @RenderSection("Styles", required: false)
</head>

<body ng-app="MixPortal" ng-init="init()" ng-controller="AppPortalController">
    <!-- <link rel="stylesheet" href="~/css/portal-light-theme-params.css" /> -->
    <style>
        :root 
        {
            --primary-color-hue : {{globalSettings.portalThemeSettings.primaryColorHue}};
            --primary-color-saturation : {{globalSettings.portalThemeSettings.primaryColorSaturation}};
            --primary-color-brightness : {{globalSettings.portalThemeSettings.primaryColorBrightness}};
            --bg-color: {{globalSettings.portalThemeSettings.bgColor}};
            --text-color: {{globalSettings.portalThemeSettings.textColor}};
        }
    </style>
    @RenderBody()

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/js/framework.min.js"></script>
    <script src="~/js/shared.min.js"></script>
    <script src="~/js/portal.min.js"></script>

    <script src="~/js/app-portal-required.min.js"></script>
    <script src="~/js/app-portal.min.js"></script>
    <script src="~/js/app-shared.min.js"></script>
    
    <script>var require = { paths: { 'vs': '/js/monaco-editor/min/vs' } };</script>
    <script src="/js/monaco-editor/min/vs/loader.js"></script>
    <script src="/js/monaco-editor/min/vs/editor/editor.main.nls.js"></script>
    <script src="/js/monaco-editor/min/vs/editor/editor.main.js"></script>

    <!-- End Components -->
    @RenderSection("Scripts", required: false)

    <!--Datatables-->
    @*@RenderSection("Modals", required: false)*@
    @*@await Component.InvokeAsync(typeof(Mix.Cms.Mvc.Areas.Portal.ViewComponents.Modals))*@
</body>
</html>