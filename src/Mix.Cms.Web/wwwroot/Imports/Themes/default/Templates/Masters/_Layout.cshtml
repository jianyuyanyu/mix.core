    theme_color="#47c5d1"
    logged_in_greeting="Chào Bạn !"
    logged_out_greeting="Chào Bạn !">
    </div>
    
    }

    <partial name="../Layouts/_Top_Nav.cshtml" />
    <div class="wrapper">
        <div class="wrapper">
        @RenderBody()
        <partial name="../Layouts/_Footer.cshtml" />
        </div>
    </div>
   <!--   Core JS Files   -->
    <script src="~/js/framework.min.js"></script>
    <script src="~/js/app-client-required.min.js"></script>
    <script src="~/js/app-client.min.js"></script>
    <script src="~/js/app-shared.min.js"></script>
    <!-- <script src="~/js/bootstrap.min.js"></script>
    
     -->
     <script>
         $(document).ready(function(){
            
            $('.nav-item').on('click', function(){
                $('.nav-item').removeClass('active');
                var dest = $(this).data('scroll-to');
                $(this).addClass('active');
                $('html, body').animate({
                    scrollTop: $(dest).offset().top - 50
                }, 1000);
                if (nowuiKit.misc.navbar_menu_visible == 1) {
                    $('html').removeClass('nav-open');
                    nowuiKit.misc.navbar_menu_visible = 0;
                    $('#bodyClick').remove();
                    setTimeout(function() {
                    $toggle.removeClass('toggled');
                    }, 550);
                }
            });
            setTimeout(() => {
                var activeSection = getActiveSection();
                if(activeSection){
                    if($('#'+activeSection).length){
                    $('html, body').animate({
                        scrollTop: $('#'+activeSection).offset().top - 50
                    }, 1000);
                    }
                    $('.nav-item').removeClass('active');
                    $('.navbar-nav').find('.'+ activeSection).addClass('active');
                }
            }, 1000);
            
         })
         function getActiveSection() {            
            var res = window.location.href.match(/#!#([^&]*)/g, '$1')
            if(res){
                res= res.toString().replace(/#!#/g, '');
            }
            return res;
        }
     </script>
