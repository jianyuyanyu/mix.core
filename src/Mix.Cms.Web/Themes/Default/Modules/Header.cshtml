@{
    var socials = MixCmsHelper.GetModule("socials", ViewBag.culture);
}
<div class="page-header page-header-small">
    <div class="page-header-image" data-parallax="true" style="background-image: url('@Model.ImageUrl');">
    </div>
    <div class="content-center">
        <h1 class="title">
            @Model.Title
        </h1>
        <p class="description text-white">
            @Html.Raw(Model.Description)
        </p>
        <div class="text-center">
             @foreach(var item in socials.Data.Items){
                 <a href="@item.Property("url")" class="btn btn-primary btn-icon  btn-round" target="_blank">
                    <i class="@item.Property("icon")"></i>
                </a>                
            }
        </div>
    </div>
</div>
